<% # Check to see if there is any feed items %>
<% if @feed_items.any? %>
  <ol class="microposts">
    <% # Render the feed_item partial passing in the collection @feed_items %>
    <%= render partial: 'shared/feed_item', collection: @feed_items %>
  </ol>

  <% # Break micropost into multi-page layout %>
  <%= will_paginate @feed_items %>
<% end %>
