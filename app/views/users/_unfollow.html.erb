<%
	# Searched relationships and finds followed_id bu the @user.id.
	# Creates a form with the method delete and a sumbit buttom that
	# allow the user to unfollow the @user
%>

<%= form_for(current_user.relationships.find_by_followed_id(@user),
             html: { method: :delete }, remote: true) do |f| %>
  <%= f.submit "Unfollow", class: "btn btn-large" %>
<% end %>